	<bean id="taskTest" class="com.ant.scq.util.TaskTest"></bean>  
	
	<task:scheduled-tasks>
        <task:scheduled ref="taskTest" method="testTask" cron="*/2 * * * * ?"/>
    </task:scheduled-tasks> 
    
