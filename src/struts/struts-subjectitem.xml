<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<!-- 与spring集成的写法，action等交予spring管理 -->
	<package name="subjectItemAction" namespace="/" extends="struts-default">
		<action name="updateSubjectItem" class="subjectItemAction" method="updateSubjectItem">
			<result name="success" type="redirectAction">toSubjectResult?subject.id=${subjectItem.subject.id}</result>
			<result name="fail">/fail.jsp</result>
		</action>
	</package>
</struts>